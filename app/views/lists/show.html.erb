<div>
  <div class="banner">
    <h1> <%= @list.name %> </h1>
  </div>
  <div class="list_cards">
  <% @list.bookmarks.each do |bookmark|%>
    <div class="card">
      <div>
        <%= link_to "❌", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this review??"} %>
      </div>
      <div class="movie_poster">
        <img src= <%= bookmark.movie.poster_url%>>
      </div>
      <div>
        <%= bookmark.movie.title %> -- <%= bookmark.movie.rating %> ⭐️
      </div>
      <div class="overview">
        <p><%=bookmark.movie.overview%></p>
      </div>
      <div>
        <%= bookmark.comment %>
      </div>
    </div>
  <%end%>
  </div>
  <div class="form">
    <h2>Add a movie to your list</h2>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
