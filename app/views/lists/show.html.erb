<div>
  <div class="banner">
    <h1>Show Lists</h1>
  </div>

  <p><%= @list.name %></p>
  <ul>
  <% @list.bookmarks.each do |bookmark|%>
    <li>
      <%= link_to "❌", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this review??"} %>
      <%= bookmark.movie.title %> - '<%= bookmark.comment %>'
    </li>
  <%end%>
  </ul>

  <h2>Add a movie to your list</h2>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
</div>
