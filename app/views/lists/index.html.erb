<div class="outer-container">
  <div class="banner">
    <h1>Mark's Movie Lists</h1>
  </div>
  <div class="list_cards">

      <% @lists.each do |list| %>
        <div class="card_list">
          <div>
            <h3><%= link_to list.name, list_path(list) %></h3>
          </div>
          <div class="delete">
            <%= link_to "❌", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?"} %>
          </div>
        </div>
      <% end %>
  </div>
</div>
