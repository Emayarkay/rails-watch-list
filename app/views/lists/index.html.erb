<div class="outer-container">
  <div class="banner_home">
    <h1>Movie Lists</h1>
  </div>
  <div class="list_cards">

      <% @lists.each do |list| %>
        <div style="background-size: cover; background-image: url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : "https://cdn.britannica.com/61/118661-050-6CAD9A11/Popcorn.jpg"%> )" class="card_list">
          <div>
            <h3><%= link_to list.name, list_path(list) %></h3>
          </div>
          <div class="delete">
            <%= link_to "❌", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?"} %>
          </div>
        </div>
      <% end %>
  </div>
</div>
