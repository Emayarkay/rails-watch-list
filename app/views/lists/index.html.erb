<div class="outer-container">
  <div class="banner">
    <h1>Mark's Movie Lists</h1>
  </div>
  <div class="list_cards">

      <% @lists.each do |list| %>
        <div class="card">
          <%= link_to "❌", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?"} %>
          <li><%= link_to list.name, list_path(list) %></li>
        </div>
      <% end %>
  </div>

  <p><%= link_to "Create a new list", new_list_path %></p>
</div>
